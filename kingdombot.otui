HealPerfil < ListBase
  BotLabel
    id: type
    color: #bbbbbb
    anchors.top: parent.top
    anchors.left: parent.left
    width: 80
    background-color: alpha
    text-align: center
    text-offset: 2 0
    @onTextChange: if self:getText() == "Mana" then self:setColor("#0000FF") elseif self:getText() == "Health" then self:setColor("#FF0000") elseif self:getText() == "Friend" then self:setColor("#FF8C00") end
  BotLabel
    id: spell
    color: #bbbbbb
    anchors.top: parent.top
    anchors.left: prev.right
    width: 100
    background-color: alpha
    text-align: center
    text-offset: 2 0
    $on:
      color: #ffffff

  BotLabel
    id: min
    color: #bbbbbb
    anchors.top: parent.top
    anchors.left: prev.right
    width: 65
    background-color: alpha
    text-align: center
    text-offset: 2 0
    $on:
      color: #ffffff
  BotLabel
    id: max
    color: #bbbbbb
    anchors.top: parent.top
    anchors.left: prev.right
    anchors.right: parent.right
    background-color: alpha
    text-align: center
    margin-right: 10
    text-offset: 2 0
    $on:
      color: #ffffff
FriendLabel < UIWidget
  height: 14
  background-color: alpha
  &updateOnStates: |
    function(self)
      local children = self:getChildren()
      for i=1,#children do
        children[i]:setOn(self:isFocused())
      end
    end
  @onFocusChange: self:updateOnStates()
  @onSetup: self:updateOnStates()

  $focus:
    background-color: #ffffff22

  BotLabel
    id: name
    color: #FF8C00
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: parent.right
    background-color: alpha
    text-align: left
    text-offset: 2 0

BotWindow
  !text: tr("Kingdom Bot")
  id: menu
  width: 350
  height: 200
  @onEscape: modules.kingdom_bot.toggle()

  BotButton
    id: healingButton
    !text: tr("Healing")
    width: 85
    anchors.top: parent.top
    anchors.left: parent.left
    !tooltip: tr("Healing you and your friends")
  BotButton
    id: targetingButton
    !text: tr("Targeting")
    width: 85
    anchors.top: prev.top
    anchors.left: prev.right
    margin-left: 5
    !tooltip: tr("Attacking creatures")