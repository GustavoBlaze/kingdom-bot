BotWindow < Window
  Button
    id: close_button
    !text: tr("close")
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    text-auto-resize: true
    @onClick: modules.kingdom_bot.toggle()

BotWindow
  !text: tr("Kingdom Bot")
  width: 400
  height: 200
  @onEscape: self:hide()
  @onEnter: self:hide()

  Button
    id: heal_button
    !text: tr("Healing")
    width: 70
    anchors.top: parent.top
    anchors.left: parent.left
