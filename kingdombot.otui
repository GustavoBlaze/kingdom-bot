BotWindow < Window
  @onEscape: self:hide()
  @onEnter: self:hide()
  Button
    id: closeButton
    !text: tr("close")
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    text-auto-resize: true
    @onClick: self:getParent():hide()

BotWindow
  !text: tr("Kingdom Bot")
  id: menu
  width: 350
  height: 200

  Button
    id: healingButton
    !text: tr("Healing")
    width: 70
    anchors.top: parent.top
    anchors.left: parent.left
