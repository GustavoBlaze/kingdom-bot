BotCheckBox < CheckBox
  font: my-font

BotTextEdit < TextEdit
  font: verdana-11px-monochrome

ComboBox < ComboBox
  font: my-font

BotButton < Button
  font: my-font

BotLabel < Label
  font: my-font

BotWindow < Window
  font: my-font
  @onEscape: self:hide()
  BotButton
    id: closeButton
    !text: tr("Close")
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    text-auto-resize: true
    @onClick: if self:getParent():getId() == "menu" then modules.kingdom_bot.toggle() else self:getParent():hide() end

OkButton < TopButton
  icon-source: images/ok_button
  icon-size: 20 20
  icon-offset: 3 2
  font: my-font
NotButton < TopButton
  icon-source: images/not_button
  icon-size: 20 20
  icon-offset: 3 3
  font: my-font
ListBase < UIWidget
  height: 14
  background-color: alpha
  &updateOnStates: |
    function(self)
      local children = self:getChildren()
      for i=1,#children do
        children[i]:setOn(self:isFocused())
      end
    end
  @onFocusChange: self:updateOnStates()
  @onSetup: self:updateOnStates()
MosterLabel < ListBase
  BotLabel
